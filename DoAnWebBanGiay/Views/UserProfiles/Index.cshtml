@model DoAnWebBanGiay.Models.UserProfile

@{
    ViewBag.Title = "Thông Tin Cá Nhân";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2 class="text-center mb-4">Thông Tin Cá Nhân</h2>

<div class="container_1">
    <div class="mb-3">
        <label class="form-label">Họ và tên:</label>
        <p class="form-control">@Model.FullName</p>
    </div>

    <div class="mb-3">
        <label class="form-label">Số điện thoại:</label>
        <p class="form-control">@Model.PhoneNumber</p>
    </div>

    <div class="mb-3">
        <label class="form-label">Địa chỉ:</label>
        <p class="form-control">@Model.Address</p>
    </div>

    <div class="mb-3">
        <label class="form-label">Ngày sinh:</label>
        <p class="form-control">@Model.BirthDate.ToString("dd/MM/yyyy")</p>
    </div>

    <div class="text-center mt-3">
        <a href="@Url.Action("Edit", "UserProfiles", new { userId = Model.UserId })" class="btn btn-primary">Chỉnh sửa thông tin</a>
    </div>
</div>

<style>
    .container_1 {
        max-width: 500px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        background-color: #f8f9fa;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        border: none;
        background-color: #f8f9fa;
        padding: 5px 10px;
        margin-bottom: 0;
    }

        .form-control:focus {
            box-shadow: none;
            outline: none;
        }
</style>
