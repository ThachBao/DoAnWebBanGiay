@model DoAnWebBanGiay.Models.Order

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0">Chi tiết đơn hàng</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 col-12 mb-3">
                    <p><strong>Người đặt:</strong> @Model.User.UserName</p>
                    <p><strong>Địa chỉ giao hàng:</strong> @Model.ShippingAddress</p>
                </div>
                <div class="col-md-6 col-12 mb-3">
                    <p><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy")</p>
                    <p><strong>Phương thức thanh toán:</strong> @Model.PaymentMethod</p>
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-end">
                    <h4><strong>Tổng tiền:</strong> <span class="text-danger">@Model.TotalAmount.ToString("N") VNĐ </span></h4>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4 shadow">
        <div class="card-header bg-secondary text-white text-center">
            <h3 class="mb-0">Sản phẩm trong đơn hàng</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover text-center align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Size</th>
                            <th>Số lượng</th>
                            <th>Giá</th>
                            <th>Tổng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in ViewBag.orderDetails)
                        {
                            <tr>
                                <td>@detail.Product.ProName</td>
                                <td>@detail.ProductSize.Size</td>
                                <td>@detail.Quantity</td>
                                <td>@detail.Price.ToString("N") VNĐ</td>
                                <td>@(detail.Quantity * detail.Price) VNĐ</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="/Admin/OrderAdmin/Index" class="btn btn-secondary btn-lg">Quay lại</a>
    </div>
</div>
