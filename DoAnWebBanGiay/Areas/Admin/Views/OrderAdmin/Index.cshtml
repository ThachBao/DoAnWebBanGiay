@model List<DoAnWebBanGiay.Models.Order>

@{
        ViewBag.Title = "Danh Sách Đơn Hàng";
        Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<h2 class="text-center text-info mt-4">Danh Sách Đơn Hàng</h2>

<div class="table-responsive shadow mt-4">
    <table class="table table-striped table-bordered table-hover shadow-sm">
        <thead class="table-dark text-center">
            <tr>
                <th style="text-transform: uppercase;">Mã Đơn Hàng</th>
                <th style="text-transform: uppercase;">Người Đặt</th>
                <th style="text-transform: uppercase;">Ngày Đặt</th>
                <th style="text-transform: uppercase;">Tổng Tiền</th>
                <th style="text-transform: uppercase;">Phương Thức Thanh Toán</th>
                <th style="text-transform: uppercase;">Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
                        {
            <tr>
                <td class="text-center align-middle">@order.OrderId</td>
                <td class="align-middle">@order.User.UserName</td>
                <td class="text-center align-middle">@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td class="text-end align-middle">@order.TotalAmount.ToString("N") VNĐ</td>
                <td class="text-center align-middle">@order.PaymentMethod</td>
                <td class="text-center align-middle">
                    <a href="@Url.Action("Details", "OrderAdmin", new { id = order.OrderId })" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i> Chi tiết
                    </a>
                    <a href="@Url.Action("Delete", "OrderAdmin", new { id = order.OrderId })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa đơn hàng này?')">
                        <i class="bi bi-trash"></i> Xóa
                    </a>
                </td>
            </tr>
                        }
        </tbody>
    </table>
</div>
