@model List<DoAnWebBanGiay.Models.User>
@{
    ViewBag.Title = "Danh Sách Người Dùng";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<h2 class="text-center text-info mt-4">Danh Sách Người Dùng</h2>

<div class="container mt-4 mb-4">
    <div class="text-end mb-3">
        <a href="@Url.Action("Create", "ManagementUser")" class="btn btn-success">
            <i class="bi bi-person-plus"></i> Thêm Người Dùng
        </a>
    </div>

    <div class="table-responsive shadow">
        <table class="table table-striped table-bordered table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th class="text-center">Mã Người Dùng</th>
                    <th class="text-center">Tên Người Dùng</th>
                    <th class="text-center">Mật khẩu</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center fw-bold">@item.UserId</td>
                            <td class="text-center">@item.UserName</td>
                            <td class="text-center text-muted">@item.Password</td>
                            <td class="text-center">@item.Email</td>
                            <td class="text-center">
                                <a href="@Url.Action("Edit", "ManagementUser", new { id = item.UserId })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a href="@Url.Action("Delete", "ManagementUser", new { id = item.UserId })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');">
                                    <i class="fas fa-trash-alt"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">Không có người dùng nào được tìm thấy.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
